<%- include('../includes/head.ejs') %>
</head>

<body style="background-color: #f3f3f3;">
    <%- include('../includes/navigation.ejs') %>
    <main class="w-100 p-4 d-flex justify-content-center mt-5" style="min-height: 100vh;">

        <% if (orders.length <= 0) { %>
            <div class="none">
                <h1>Nothing here!</h1>
            </div>
        <% } else { %>
            <ol class="list-group list-group-light list-group-numbered" style="width: 30rem;">
                <% orders.forEach(customerOrder => { %>
                        <li class="list-group-item d-flex justify-content-between align-items-start p-4">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">Orders by <%= customerOrder[0].user.firstName %> <%= customerOrder[0].user.lastName %> </div>
                                <% customerOrder.forEach(order => { %>
                                <div>
                                    <%= order.title %> <span class="badge badge-primary rounded-pill">&times; <%= order.quantity %></span><br>
                                </div>  
                                <% }); %>
                            </div>
                            <a type="button" class="btn btn-primary" href="/admin/product-orders/<%= customerOrder[0].user._id %>">
                                View details
                            </a>
                        </li>
                <% }); %>
            </ol>
        <% } %>        
    </main>
</body>
<%- include('../includes/end.ejs') %>
